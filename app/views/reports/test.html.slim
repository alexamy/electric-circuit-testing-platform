.block.mb-4
  h1.mb-2.font-bold Отчёт по тесту
  = render partial: 'account_info'

.block.schemes
  - @reports.each do |report|
    = image_tag report.scheme, class: 'scheme', data: { tooltip_id: report.id }

.table-wrapper
  table.table
    thead.table-head
      th.table-header
        = Question.human_attribute_name(:text)
      th.table-header
        | Условия
      th.table-header
        | Правильный ответ
      th.table-header
        | Ответ
      th.table-header
        | Время ответа
      th.table-header
        | Длительность

    tbody.table-body
      - @reports.each do |report|
        tr.table-row.answer data-tooltip-parent-id=report.id class="answer-#{report.id} #{report.correct? ? 'bg-green-100' : 'bg-red-100'}"
          td.table-cell
            = report.question.text
          td.table-cell.arguments
            = simple_format(report.arguments_text)
          td.table-cell.correct-answer
            = report.correct_answer
          td.table-cell.user-answer
            = report.user_answer || '-'
          td.table-cell.created-at
            = report.created_at.strftime('%T %d.%m.%y')
          td.table-cell.answer-duration
            = report.user_answer ? seconds_to_minsec((report.answered_at - report.created_at).seconds) : '-'
