= form_with url: answer_path(@task), method: :patch, id: 'answer-form' do |f|
  .form-group
    = f.label :answer, 'Ответ:', class: 'form-label'
    = f.text_field :answer, class: 'form-input'

  .form-actions
    = f.submit 'Ответить', class: 'button'

  .form-actions
    = f.submit 'Ответить и завершить', name: 'send_and_quit', class: 'button'
